<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Inclure toutes les données par défaut -->
        <include domain="root" />
        <include domain="file" />
        <include domain="database" />
        <include domain="sharedpref" />
        
        <!-- Exclure les données sensibles -->
        <exclude domain="sharedpref" path="flutter.secure_storage.xml" />
        <exclude domain="database" path="cache.db" />
        <exclude domain="file" path="cache/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Inclure toutes les données par défaut -->
        <include domain="root" />
        <include domain="file" />
        <include domain="database" />
        <include domain="sharedpref" />
        
        <!-- Exclure les données sensibles -->
        <exclude domain="sharedpref" path="flutter.secure_storage.xml" />
        <exclude domain="database" path="cache.db" />
        <exclude domain="file" path="cache/" />
    </device-transfer>
</data-extraction-rules>
